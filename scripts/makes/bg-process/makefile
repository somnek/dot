start:
	@echo "\033[1mğŸš€ Starting process...\033[0m" && \
	sleep 60 & \
	echo "\033[32mâœ… Process started!\033[0m"; \

stop:
	@echo "\033[1mğŸ›‘ Stopping process...\033[0m" && \
	pkill sleep	&& \
	echo "\033[31mâŒ Process stopped!\033[0m" || \
	echo "\033[31mâŒ Process not running!\033[0m"

status:
	@echo "\033[1mğŸ’» Current process status:\033[0m" && \
	ps aux | grep sleep